@model Vidly.ViewModels.MoviesSummaryViewModel


@{
    ViewBag.Title = "Movies Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies </h1>

@if (Model.Movies.Count == 0)
{
    <text>No one has ever rented this movie before.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th> Movie</th>
            <th> Genre </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "MovieDetail", "Movies", new { id = movie.Id }, null)</td>
                <td> @movie.MovieGenre.Name </td>
            </tr>
        }
        </tbody>
    </table>
}